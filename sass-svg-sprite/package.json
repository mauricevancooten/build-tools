{
  "name": "build-tool-sass-svg-sprite",
  "version": "0.0.1",
  "devDependencies": {
    "breakpoint": "^0.1.6",
    "breakpoint-sass": "^2.7.0",
    "eyeglass": "^0.8.2",
    "node-sass": "^3.4.2",
    "singularitygs": "^1.7.0",
    "svg-sprite": "^1.3.0",
    "watch": "^0.17.1"
  },
  "scripts": {
    "build:css": "mkdir -p public/css && node scripts/eyeglass.js",
    "build": "npm run build:css",
    "build:watch": "watch 'npm run build' src/sass/",
    "sprite": "svg-sprite --css --css-render-scss --css-render-scss-dest=../src/sass/_sprite.scss --css-sprite=../img/sprite.svg src/img/*.svg && mv img public/"
  }
}
